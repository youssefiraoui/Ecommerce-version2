<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youssefiraoui.ecommercev2.controlers.Panier">


    <TextView
        android:id="@+id/pannelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Mon panier :"
        android:textSize="25sp" />

    <ScrollView
        android:id="@+id/scrollTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pannelTitle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="85dp">

        <TableLayout
            android:id="@+id/pannelTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </TableLayout>

    </ScrollView>
    <Button
        android:id="@+id/commandButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollTable"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="Passer commande"/>
</RelativeLayout>
