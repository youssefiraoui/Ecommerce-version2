<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youssefiraoui.ecommercev2.controlers.Inscription"
    android:background="#fff">


    <TextView
        android:id="@+id/inscriptiontextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Inscrivez-vous via ce formulaire :"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="20dp" />
    <LinearLayout
        android:id="@+id/linearInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inscriptiontextView"
        android:layout_alignStart="@+id/inscriptiontextView"
        android:layout_below="@+id/inscriptiontextView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/loginimageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/login" />
        <EditText
            android:id="@+id/logEditText"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_red_dark"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearInscription3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearInscription"
        android:layout_alignStart="@+id/linearInscription"
        android:layout_below="@+id/linearInscription"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/passeditText"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_red_dark"
            android:ems="10"
            android:inputType="textPassword"
             />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearInscription5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearInscription3"
        android:layout_alignStart="@+id/linearInscription3"
        android:layout_below="@+id/linearInscription3"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/tel" />

        <EditText
            android:id="@+id/teleditText"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_red_dark"
            android:ems="10"
            android:inputType="textPersonName"
             />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearInscription6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearInscription5"
        android:layout_alignStart="@+id/linearInscription5"
        android:layout_below="@+id/linearInscription5"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/mail" />

        <EditText
            android:id="@+id/maileditText"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_red_dark"
            android:ems="10"
            android:inputType="textEmailAddress"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearInscription7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearInscription6"
        android:layout_alignStart="@+id/linearInscription6"
        android:layout_below="@+id/linearInscription6"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/date" />

        <EditText
            android:id="@+id/dateeditText"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_red_dark"
            android:ems="10"
            android:inputType="date" />


    </LinearLayout>

    <Button
        android:id="@+id/sinscrireButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearInscription7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:backgroundTint="?attr/actionModeSplitBackground"
        android:onClick="sinscrire"
        android:text="S'inscrire"
        android:textColor="@android:color/background_light" />


</RelativeLayout>
